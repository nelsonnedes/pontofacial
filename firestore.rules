// Exemplo inicial de regras — refine antes de produção.
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isAdmin() { return isSignedIn() && 'admin' in request.auth.token && request.auth.token.admin == true; }

    match /empresas/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    match /estabelecimentos/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    match /usuarios/{id} {
      allow read, write: if isAdmin() || (isSignedIn() && request.auth.uid == id);
    }
    match /marcacoes/{id} {
      allow create: if isSignedIn() && request.resource.data.usuarioId == request.auth.uid;
      allow read: if isAdmin() || resource.data.usuarioId == request.auth.uid;
      allow update, delete: if isAdmin();
    }
    match /sequences/{id} {
      allow read: if isAdmin();
      allow write: if isAdmin(); // NSR gerado no servidor
    }
  }
}
